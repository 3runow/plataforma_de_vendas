generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int        @id @default(autoincrement())
  name             String
  email            String     @unique
  password         String
  createdAt        DateTime   @default(now())
  role             String     @default("customer")
  updatedAt        DateTime   @updatedAt
  cpf              String?    @unique
  phone            String?
  resetToken       String?
  resetTokenExpiry DateTime?
  isGuest          Boolean    @default(false)
  addresses        Address[]
  cartItems        CartItem[]
  orders           Order[]
}

model Address {
  id            Int      @id @default(autoincrement())
  userId        Int
  recipientName String
  cep           String
  street        String
  number        String
  complement    String?
  neighborhood  String
  city          String
  state         String
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders        Order[]
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int         @default(0)
  imageUrl    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  discount    Float?      @default(0)
  isFeatured  Boolean     @default(false)
  isNew       Boolean     @default(false)
  imageUrls   String[]    @default([])
  pieces      Int?
  dimensions  String?     @default("5,8 x 3,6 x 5,8cm (LxPxA)")
  orderItems  OrderItem[]
  cartItems   CartItem[]
}

model Order {
  id                   Int         @id @default(autoincrement())
  userId               Int
  total                Float
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  addressId            Int
  status               String      @default("payment_pending")
  melhorEnvioOrderId   String?
  paymentId            String?
  paymentMethod        String?
  paymentStatus        String?
  shippingDeliveryTime Int?
  shippingPrice        Float?
  shippingService      String?
  shippingTrackingCode String?
  address              Address     @relation(fields: [addressId], references: [id])
  user                 User        @relation(fields: [userId], references: [id])
  items                OrderItem[]
  shipment             Shipment?
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Float   @default(0)
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model CartItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Coupon {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  discount    Float
  isActive    Boolean   @default(true)
  expiresAt   DateTime?
  usageLimit  Int?
  usedCount   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Shipment {
  id                  Int       @id @default(autoincrement())
  orderId             Int       @unique
  melhorEnvioId       String?   @unique
  protocol            String?
  serviceId           Int?
  serviceName         String?
  carrier             String?
  price               Float?
  discount            Float?    @default(0)
  finalPrice          Float?
  deliveryTime        Int?
  trackingCode        String?
  status              String    @default("pending")
  labelUrl            String?
  labelPrintUrl       String?
  paid                Boolean   @default(false)
  paidAt              DateTime?
  posted              Boolean   @default(false)
  postedAt            DateTime?
  delivered           Boolean   @default(false)
  deliveredAt         DateTime?
  canceled            Boolean   @default(false)
  canceledAt          DateTime?
  error               String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  order               Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  trackingEvents      TrackingEvent[]
}

model TrackingEvent {
  id          Int       @id @default(autoincrement())
  shipmentId  Int
  status      String
  message     String
  location    String?
  date        DateTime
  createdAt   DateTime  @default(now())
  shipment    Shipment  @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
}

model ShippingQuote {
  id              Int       @id @default(autoincrement())
  sessionId       String
  serviceId       Int
  serviceName     String
  carrier         String
  price           Float
  discount        Float     @default(0)
  finalPrice      Float
  deliveryTime    Int
  dimensions      Json
  weight          Float
  fromZipCode     String
  toZipCode       String
  insurance       Boolean   @default(false)
  insuranceValue  Float?
  createdAt       DateTime  @default(now())
  expiresAt       DateTime
}
