# Database
DATABASE_URL="your_postgresql_connection_string_here"

# JWT Secret (use a strong random string)
JWT_SECRET="your_jwt_secret_here"

# Resend API Key (get from https://resend.com/api-keys)
RESEND_API_KEY="re_your_resend_api_key_here"

# Email sender (must be verified in Resend)
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# App URL (for password reset links)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN="your_mercado_pago_access_token_here"
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY="your_mercado_pago_public_key_here"

# Melhor Envio
MELHOR_ENVIO_TOKEN="your_melhor_envio_token_here"
MELHOR_ENVIO_SANDBOX="true"
